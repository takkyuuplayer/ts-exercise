---
import BaseLayout from "../layouts/BaseLayout.astro";
const allPosts: ReadonlyArray<{ url: string; frontmatter: { title: string } }> =
  await Astro.glob("../pages/posts/*.md");

import "../styles/global.css";
---

<BaseLayout pageTitle="ブログ">
  <h2>私の素晴らしいブログのサブタイトル</h2>
  <p>ここには、私がAstroを学んでいく旅の様子を投稿します。</p>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
